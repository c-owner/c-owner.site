        "@vueuse/nuxt": "^9.8.2",
        "colors": "^1.4.0",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-nuxt": "^4.0.0",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-vue": "^9.8.0",
        "jsdom": "^20.0.3",
        "node-sass": "^8.0.0",
        "nuxt": "3.0.0",
        "nuxt-icon": "^0.1.8",
